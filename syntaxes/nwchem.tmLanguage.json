{
  "scopeName": "source.nwchem",
  "patterns": [
    {
      "match": "^\\s*#.*",
      "name": "comment.line.number-sign.nwchem"
    },
    {
      "match": "^\\s*(geometry|basis|scf|dft|mp2|ccsd|title|task)\\s+",
      "name": "keyword.control.nwchem"
    },
    {
      "match": "\\b(\\w+)\\s+([^\\s]+)",
      "captures": {
        "1": { "name": "variable.parameter.nwchem" },
        "2": { "name": "string.unquoted.nwchem" }
      }
    },
    {
      "match": "\\b(on|off|true|false)\\b",
      "name": "constant.language.boolean.nwchem"
    },
    {
      "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b",
      "name": "constant.numeric.float.nwchem"
    },
    {
      "match": "\\b\\d+\\b",
      "name": "constant.numeric.integer.nwchem"
    },
    {
      "match": "^\\s*[A-Z][a-z]?\\s+\\d+\\.\\d+\\s+\\d+\\.\\d+\\s+\\d+\\.\\d+",
      "name": "entity.name.type.element.nwchem"
    }
  ]
}