{
  "scopeName": "source.qe",
  "patterns": [
    {
      "match": "^\\s*!.*",
      "name": "comment.line.exclamation.qe"
    },
    {
      "match": "\\b(&[A-Z_]+)\\b",
      "name": "keyword.control.qe"
    },
    {
      "match": "\\b/&END",
      "name": "keyword.control.qe"
    },
    {
      "match": "\\b([A-Z][A-Z0-9_]*)\\s*=\\s*([^\\s,]+)",
      "captures": {
        "1": { "name": "variable.parameter.qe" },
        "2": { "name": "string.unquoted.qe" }
      }
    },
    {
      "match": "\\b(\\.(true\\.|false\\.|yes\\.|no\\.))",
      "name": "constant.language.boolean.qe"
    },
    {
      "match": "\\b\\d+\\.\\d+([dD][+-]?\\d+)?\\b",
      "name": "constant.numeric.float.qe"
    },
    {
      "match": "\\b\\d+\\b",
      "name": "constant.numeric.integer.qe"
    },
    {
      "match": "'([^']*)'",
      "name": "string.quoted.single.qe"
    },
    {
      "match": "ATOMIC_POSITIONS|ATOMIC_SPECIES|K_POINTS|CELL_PARAMETERS|CONSTRAINTS",
      "name": "keyword.section.qe"
    }
  ]
}